<% if mentions.present? %>
  <div class='mentioned-report-container'>
    <%= t('views.reports.mentioned_reports') %>
    <ul>
      <% mentions.each do |mention| %>
        <li>
          <%= link_to mention.report.title, report_path(mention.report) %>
          <span class='mentioned-from'>
            <%= t('views.reports.mentioned_from') %> ( <%= t('datetime.ago', count: time_ago_in_words(mention.created_at)) %> )
          </span>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
